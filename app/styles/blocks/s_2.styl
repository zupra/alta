
setNthBg()
  for i in (1..50)
    //&:nth-of-type({index + 1})
    &:nth-child({i})
      background hsl(i * 5, 90%, 50%)


box-shadow()
  //box-shadow 0 0 10px #000
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.24)


